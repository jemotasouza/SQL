---Criação e gerenciamento de dados de uma escola

---Criando o banco de Dados
CREATE DATABASE ESCOLA;

---Seleção do Banco de dados a ser utilizado
USE ESCOLA;

---Criando as tabelas do Banco de Dados

CREATE TABLE ALUNOS
(ID_ALUNO INT PRIMARY KEY,
NOME_ALUNO VARCHAR (150),
DATA_NASCIMENTO DATE,
GENERO CHAR (1),
ENDERECO VARCHAR (150),
TELEFONE VARCHAR (20),
EMAIL VARCHAR (50));

CREATE TABLE PROFESSORES
(ID_PROFESSOR INT PRIMARY KEY,
NOME_PROFESSOR VARCHAR (150),
DATA_NASCIMENTO DATE,
GENERO CHAR (1),
TELEFONE VARCHAR (20),
EMAIL VARCHAR (50));

CREATE TABLE DISCIPLINA
(ID_DISCIPLINA INT PRIMARY KEY,
NOME_DISCIPLINA VARCHAR (150),
DESCRICAO VARCHAR (100),
CARGA_HORARIA INT,
ID_PROFESSOR INT,
CONSTRAINT FK_DISCIPLINA_PROFESSOR
FOREIGN KEY (ID_PROFESSOR) REFERENCES PROFESSORES (ID_PROFESSOR));

CREATE TABLE TURMAS
(ID_TURMA INT PRIMARY KEY,
NOME_TURMA VARCHAR (100),
ANO_LETIVO CHAR(4),
ID_PROFESSOR INT,
CONSTRAINT FK_TURMAS_PROFESSOR
FOREIGN KEY (ID_PROFESSOR) REFERENCES PROFESSORES (ID_PROFESSOR));

CREATE TABLE TURMA_ALUNOS
(ID_TURMA INT,
ID_ALUNO INT,
CONSTRAINT FK_TURMA_ALUNOS
FOREIGN KEY (ID_TURMA) REFERENCES TURMAS (ID_TURMA),
CONSTRAINT FK_ALUNO_TURMA
FOREIGN KEY (ID_ALUNO) REFERENCES ALUNOS(ID_ALUNO));

CREATE TABLE NOTAS
(ID_NOTA INT PRIMARY KEY,
ID_ALUNO INT,
ID_DISCIPLINA INT,
VALOR_NOTA FLOAT,
DATA_AVALIACAO DATE,
CONSTRAINT FK_NOTAS_ALUNO 
FOREIGN KEY (ID_ALUNO) REFERENCES ALUNOS (ID_ALUNO),
CONSTRAINT FK_NOTAS_DISCIPLINA
FOREIGN KEY (ID_DISCIPLINA) REFERENCES DISCIPLINA (ID_DISCIPLINA));
