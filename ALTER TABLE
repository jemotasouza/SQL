---Alteração de Tabela referente a quantidade de caracteres da coluna NOME_DISCIPLINA
ALTER TABLE DISCIPLINA
ALTER COLUMN NOME_DISCIPLINA VARCHAR(30) NOT NULL;

---Alteração de tabela com adição de coluna
ALTER TABLE PROFESSORES
ADD DATA_ADMISSAO DATE;

---Alteração de tabela com exclusão de coluna
ALTER TABLE PROFESSORES
DROP COLUMN DATA_ADMISSAO;
